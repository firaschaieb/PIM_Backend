{% extends 'layout.twig' %}
{% block body %}
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <fieldset style="width: 33%; display: block; margin: auto">
      <legend>Create Product</legend>
      <form action="register" method="post" enctype="multipart/form-data">
        <div style="margin-bottom: 15px">
          firstName
          <label for="firstName_id" style="width: 100%; margin-bottom: 15px">
            <input type="text" placeholder="firstName" name="firstName" id="firstName_id" />
          </label>
        </div>
        <div style="margin-bottom: 15px">
          <label for="lastName_id" style="width: 100%; margin-bottom: 15px">
            lastName
            <input
              type="text"
              placeholder="lastName"
              name="lastName"
              id="lastName_id"
            />
          </label>
        </div>
        <div style="margin-bottom: 15px">
          <label for="email_id" style="width: 100%; margin-bottom: 15px">
            email
            <input
              type="text"
              placeholder="email"
              name="email"
              id="email_id"
            />
          </label>
        </div>
        <div style="margin-bottom: 15px">
          <label for="image_id" style="width: 100%; margin-bottom: 15px">
            Image
            <input type="file" name="image" id="image_id" />
          </label>
        </div>
        <input type="submit" value="register" style="float: right" />
      </form>
    </fieldset>
  </body>
</html>
{% endblock %}